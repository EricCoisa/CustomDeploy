Content-Type: application/json
Authorization: Bearer TOKEN_AQUI

{
  "repoUrl": "https://github.com/LinkedFarma/Gruppy.Solution.Front",
  "branch": "dev",
  "buildCommand": "npm i && npm run build:carteira",
  "buildOutput": "core/carteira/dist",
  "iisSiteName": "gruppy",
